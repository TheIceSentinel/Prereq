<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CourseListActivity"
    android:id="@+id/activity_course_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    android:weightSum="1"
    android:gravity="center">

    <!--<ImageView-->
        <!--android:id="@+id/imgLogo"-->
        <!--android:layout_width="64dp"-->
        <!--android:layout_height="64dp"-->
        <!--app:srcCompat="@drawable/osu"-->
        <!--tools:ignore="contentDescription" />-->

    <TextView
        android:id="@+id/txtListHeader"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/prompt_course_select" />

    <ListView
        android:id="@+id/completeCourseList"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/Button">

        <TextView
            android:id="@+id/txtCoursePrompt"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt_add_course"
            android:gravity="center" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:gravity="center" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
