<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CourseListActivity"
    android:id="@+id/activity_course_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    android:weightSum="1"
    android:gravity="center">

    <TextView
        android:id="@+id/txtListHeader"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:text="@string/prompt_course_select" />

    <ListView
        android:id="@+id/completeCourseList"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="8dp"
        style="@style/Button">

        <TextView
            android:id="@+id/txtCoursePrompt"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt_add_course"
            android:gravity="center" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_confirm"
            android:backgroundTint="#FFFFFF"
            android:gravity="center" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_cancel"
            android:backgroundTint="#FFFFFF"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
